[dnsservers]
192.168.57.2 nsd_ip_address=192.168.57.2
192.168.57.3 nsd_ip_address=192.168.57.3

[smtpservers]
192.168.57.2 smtpd_listens='[{"interface": "em1", "hostname": "mx1.exemple.com"}]'
192.168.57.3 smtpd_listens='[{"interface": "em1", "hostname": "mx2.exemple.com"}]' smtpd_relay='{"backup": "mx2.exemple.com"}'

[all:vars]
env=development
ansible_ssh_user=vagrant
ansible_ssh_private_key_file=~/.vagrant.d/insecure_private_key
ansible_python_interpreter=/usr/local/bin/python2.7
